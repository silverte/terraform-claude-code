{
  "techStack": {
    "iac": "Terraform >= 1.7",
    "provider": "hashicorp/aws ~> 5.0",
    "orchestration": "Claude Code (slash commands + agents)",
    "mcp": [
      "awslabs.terraform-mcp-server",
      "awslabs.aws-documentation-mcp-server",
      "awslabs.well-architected-security-mcp-server"
    ],
    "cicd": "GitHub Actions + OIDC",
    "stateBackend": "S3 + DynamoDB"
  },
  "build": {
    "workflow": "/tf-spec → /tf-build → /tf-plan (3단계 권장)",
    "alternativeWorkflow": "/tf-spec → /tf-generate → /tf-review → /tf-plan (4단계)",
    "bootstrapScript": "scripts/bootstrap-backend.sh",
    "cicdGuide": "docs/ci-cd-guide.md"
  },
  "conventions": {
    "versionFile": "versions.tf (NOT terraform.tf)",
    "requiredTags": ["Project", "Environment", "ManagedBy", "Owner", "CostCenter"],
    "namingPattern": "{project}-{env}-{service}-{resource}",
    "variableStyle": "snake_case with description + type + validation",
    "securityRules": "no hardcoded secrets, least privilege IAM, encrypted S3/EBS, VPC Flow Logs",
    "noTerraformApply": "CI/CD only, never direct apply"
  },
  "structure": {
    "commands": ".claude/commands/ (5: tf-spec, tf-build, tf-generate, tf-review, tf-plan)",
    "agents": ".claude/agents/ (4: tf-architect, tf-security-reviewer, tf-cost-analyzer, tf-module-developer)",
    "references": ".claude/references/ (2: _code-generation-rules.md, _validation-checklist.md)",
    "templates": "templates/ (8: _base, organization, networking, compute, database, storage, security, monitoring)",
    "specs": "specs/ (generated YAML specs)",
    "modules": "modules/ (generated Terraform modules)",
    "environments": "environments/ (org-foundation/01-03 + dev/staging/prod)"
  },
  "notes": [
