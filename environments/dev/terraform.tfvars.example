# Dev Environment Configuration
# Copy this file to terraform.tfvars and fill in the values

#------------------------------------------------------------------------------
# Basic Configuration
#------------------------------------------------------------------------------
project_name = "myproject"
environment  = "dev"
aws_region   = "ap-northeast-2"

#------------------------------------------------------------------------------
# Account IDs (Replace with your actual account IDs)
#------------------------------------------------------------------------------
management_account_id = "111111111111"
security_account_id   = "222222222222"
# terraform_external_id = "your-external-id"  # Set via environment variable TF_VAR_terraform_external_id

#------------------------------------------------------------------------------
# VPC Configuration
#------------------------------------------------------------------------------
vpc_cidr           = "10.10.0.0/16"
availability_zones = ["ap-northeast-2a", "ap-northeast-2c"]

private_subnet_cidrs = ["10.10.1.0/24", "10.10.2.0/24"]
public_subnet_cidrs  = ["10.10.101.0/24", "10.10.102.0/24"]

enable_nat_gateway = true

#------------------------------------------------------------------------------
# Logging Configuration (Security Account)
#------------------------------------------------------------------------------
cloudtrail_bucket_name = "myproject-cloudtrail-logs-222222222222"
config_bucket_name     = "myproject-config-data-222222222222"
# cloudtrail_kms_key_id = "arn:aws:kms:ap-northeast-2:222222222222:key/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

#------------------------------------------------------------------------------
# Tags
#------------------------------------------------------------------------------
owner       = "platform-team"
cost_center = "development"

additional_tags = {
  Team        = "platform"
  Application = "infrastructure"
}
